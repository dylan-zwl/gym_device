<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/system_settings"
            android:layout_width="@dimen/main_icon3_with"
            android:layout_height="@dimen/main_icon3_with"
            android:layout_alignParentTop="true"
            android:background="@null"/>

        <Button
            android:id="@+id/preButton"
            android:layout_width="@dimen/main_icon3_with"
            android:layout_height="@dimen/main_icon1_height"
            android:layout_marginTop="183dp"
            android:background="@drawable/btn_pre"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/main_line1_left_margin"
        android:layout_marginTop="@dimen/main_line1_top_margin"
        android:orientation="vertical">

        <Button
            android:id="@+id/newsButton"
            android:layout_width="@dimen/main_icon1_with"
            android:layout_height="@dimen/main_icon1_height"
            android:background="@drawable/btn_news"
            android:gravity="top|center_horizontal"
            android:paddingTop="@dimen/main_tx_padding_top"
            android:text="@string/news"
            android:textColor="@android:color/white"
            android:textSize="@dimen/main_tx_size"/>

        <Button
            android:id="@+id/gameButton"
            android:layout_width="@dimen/main_icon1_with"
            android:layout_height="@dimen/main_icon1_height"
            android:layout_marginTop="@dimen/main_item_top_margin"
            android:background="@drawable/btn_game"
            android:gravity="top|center_horizontal"
            android:paddingTop="@dimen/main_tx_padding_top"
            android:text="@string/game"
            android:textColor="@android:color/white"
            android:textSize="@dimen/main_tx_size"/>

        <Button
            android:id="@+id/weatherButton"
            android:layout_width="@dimen/main_icon1_with"
            android:layout_height="@dimen/main_icon1_height"
            android:layout_marginTop="@dimen/main_item_top_margin"
            android:background="@drawable/btn_weather"
            android:gravity="top|center_horizontal"
            android:paddingTop="@dimen/main_tx_padding_top"
            android:text="@string/weather"
            android:textColor="@android:color/white"
            android:textSize="@dimen/main_tx_size"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/main_line1_left_margin"
        android:layout_marginTop="@dimen/main_line1_top_margin"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/videoButton"
                android:layout_width="@dimen/main_icon1_with"
                android:layout_height="@dimen/main_icon1_height"
                android:background="@drawable/btn_video"
                android:gravity="top|center_horizontal"
                android:paddingTop="@dimen/main_tx_padding_top"
                android:text="@string/video"
                android:textColor="@android:color/white"
                android:textSize="@dimen/main_tx_size"/>

            <Button
                android:id="@+id/musicButton"
                android:layout_width="@dimen/main_icon1_with"
                android:layout_height="@dimen/main_icon1_height"
                android:layout_marginLeft="@dimen/main_line1_left_margin"
                android:background="@drawable/btn_music"
                android:gravity="top|center_horizontal"
                android:paddingTop="@dimen/main_tx_padding_top"
                android:text="@string/music"
                android:textColor="@android:color/white"
                android:textSize="@dimen/main_tx_size"/>
        </LinearLayout>

        <Button
            android:id="@+id/internetButton"
            android:layout_width="@dimen/main_icon4_with"
            android:layout_height="@dimen/main_icon1_height"
            android:layout_marginTop="@dimen/main_item_top_margin"
            android:background="@drawable/btn_internet"
            android:gravity="top|left"
            android:paddingLeft="@dimen/main_tx_padding_left"
            android:paddingTop="@dimen/main_tx_padding_top"
            android:text="@string/internet"
            android:textColor="@android:color/white"
            android:textSize="@dimen/main_tx_size"/>

        <Button
            android:id="@+id/storeButton"
            android:layout_width="@dimen/main_icon4_with"
            android:layout_height="@dimen/main_icon1_height"
            android:layout_marginTop="@dimen/main_item_top_margin"
            android:background="@drawable/btn_store"
            android:gravity="top|left"
            android:paddingLeft="@dimen/main_tx_padding_left"
            android:paddingTop="@dimen/main_tx_padding_top"
            android:text="@string/store"
            android:textColor="@android:color/white"
            android:textSize="@dimen/main_tx_size"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/main_line1_left_margin"
        android:layout_marginTop="@dimen/main_line1_top_margin"
        android:orientation="vertical">

        <Button
            android:id="@+id/wifiButton"
            android:layout_width="@dimen/main_icon1_with"
            android:layout_height="@dimen/main_icon1_height"
            android:background="@drawable/btn_wifi"
            android:gravity="top|center_horizontal"
            android:paddingTop="@dimen/main_tx_padding_top"
            android:text="@string/wifi"
            android:textColor="@android:color/white"
            android:textSize="@dimen/main_tx_size"/>

        <Button
            android:id="@+id/bluetoothButton"
            android:layout_width="@dimen/main_icon1_with"
            android:layout_height="@dimen/main_icon1_height"
            android:layout_marginTop="@dimen/main_item_top_margin"
            android:background="@drawable/btn_blue"
            android:gravity="top|center_horizontal"
            android:paddingTop="@dimen/main_tx_padding_top"
            android:text="@string/bluetooth"
            android:textColor="@android:color/white"
            android:textSize="@dimen/main_tx_size"/>

        <Button
            android:id="@+id/datetimeButton"
            android:layout_width="@dimen/main_icon1_with"
            android:layout_height="@dimen/main_icon1_height"
            android:layout_marginTop="@dimen/main_item_top_margin"
            android:background="@drawable/btn_time_set"
            android:gravity="top|center_horizontal"
            android:paddingTop="@dimen/main_tx_padding_top"
            android:text="@string/datetime"
            android:textColor="@android:color/white"
            android:textSize="@dimen/main_tx_size"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/main_line1_left_margin"
        android:layout_marginTop="@dimen/main_line1_top_margin"
        android:orientation="vertical">

        <Button
            android:id="@+id/app"
            android:layout_width="@dimen/main_icon1_with"
            android:layout_height="@dimen/main_icon1_height"
            android:background="@drawable/btn_app"
            android:gravity="top|center_horizontal"
            android:paddingTop="@dimen/main_tx_padding_top"
            android:text="@string/app"
            android:textColor="@android:color/white"
            android:textSize="@dimen/main_tx_size"/>
    </LinearLayout>
</LinearLayout>
