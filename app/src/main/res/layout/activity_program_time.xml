<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_main"
                android:gravity="center_horizontal">

    <TextView
        android:id="@+id/program_time_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="66px"
        android:gravity="center_horizontal"
        android:text="@string/program_time"
        android:textColor="#ffffff"
        android:textSize="40sp"/>

    <LinearLayout
        android:id="@+id/program_time_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/program_time_title"
        android:layout_marginTop="70px"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/program_time_sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_setting_sub"/>

        <SeekBar
            android:id="@+id/program_time_seekbar"
            android:layout_width="637px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15px"
            android:layout_marginRight="15px"
            android:maxHeight="44px"
            android:minHeight="44px"
            android:paddingLeft="8px"
            android:paddingRight="8px"
            android:progressDrawable="@drawable/skbar_style_setting"
            android:thumb="@drawable/skbar_thumb_setting"/>

        <Button
            android:id="@+id/program_time_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_setting_add"/>
    </LinearLayout>

    <Button
        android:id="@+id/program_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/program_time_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15px"
        android:layout_marginTop="60px"
        android:background="@drawable/btn_program_start"
        android:text="@string/start"
        android:textColor="#ffffff"
        android:textSize="@dimen/start_size"/>

</RelativeLayout>